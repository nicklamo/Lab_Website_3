<% include ../partials/header %>
<% include ../partials/menu %>
	<div class="container">
		<br>
		<div class="row">
			<div class="col-4">
				<div class="card">
				<!-- TODO: Modify the ejs code below, to conditionally set the image_src to be from our chosen player -->
				  <%
				  var image_src = '../resources/img/helmet.jpg';

				  %>
				 <img class="card-img-top" id="player_img" src= "<%- image_src %>" alt="Image of Football Player">
				  <div class="card-body mx-auto">
					<form class="form"action="/player_info/post" method="get">
						<select class="custom-select" name="player_choice" onchange="this.form.submit()">
							 <option selected>Select Player</option>
							 <!-- TODO: Populate our select with player options
							 			For each player, set a new option with a value matching the palyer's id,
							 			but will display the player's name-->
										<%
											if(data){
												var option = '';
												data.forEach(function(item){
													option += '<option name="player_id" value= ' + item.id +'>';
													option += item.name + '</option>'
												});
											%>
										<%- option -%>
									<% } %>
						</select>
					</form>
				  </div>
				</div>
			</div>
			<div class="col-8">
				<div class="table-responsive">
					<table class="table">
						<tr>
							<!-- TODO: Set Player Information
							 			If a player has been selected, fill in their information in each of the fields below.
							 		    You'll need to calculate here the player's average rushing, receiving, and passing yards.-->
							<th>Year</th>
							<td>
								<% if(typeof result_0 !== 'undefined')
										{%>
											<%-JSON.stringify(result_0)%>
								<%}%>
							</td>
						</tr>
						<tr>
							<th>Major</th>
							<td><% if(typeof result_1 !== 'undefined')
										{%>
											<%- JSON.stringify(result_1) %>
								 	<% }%>
								</td>
						</tr>
						<tr>
							<th>Games Played</th>
							<td><% if(typeof result_2 !== 'undefined')
										{%>
											<%-JSON.stringify(result_2) %>
								 	<% }%>	</td>
						</tr>
						<tr>
							<td>Passing Yards: <% if(typeof result_3 !== 'undefined')
										{%>
											<%- JSON.stringify(result_3) %>
								 	<% }%></td>
							<td>Avg. Passing Yards: <% if(typeof result_6 !== 'undefined')
										{%>
											<%- JSON.stringify(result_6) %>
								 	<% }%></td>
						</tr>
						<tr>
							<td>Rushing Yards: <% if(typeof result_4 !== 'undefined')
										{%>
											<%- JSON.stringify(result_4) %>
								 	<% }%></td>
							<td>Avg. Rushing Yards: <% if(typeof result_7 !== 'undefined')
										{%>
											<%- JSON.stringify(result_7) %>
								 	<% }%></td>
						</tr>
						<tr>
							<td>Receiving Yards: <% if(typeof result_5 !== 'undefined')
										{%>
											<%- JSON.stringify(result_5) %>
								 	<% }%></td>
							<td>Avg. Receiving Yards: <% if(typeof result_8 !== 'undefined')
										{%>
											<%- JSON.stringify(result_8) %>
								 	<% }%></td>
						</tr>
					</table>
				</div>
			</div>
		</div>
	</div>

<% include ../partials/footer %>
